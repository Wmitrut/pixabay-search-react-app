{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": [ "prettier", "eslint:recommended", "plugin:react/recommended", "plugin:prettier/recommended","plugin:tailwindcss/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react", "prettier", "tailwindcss"],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off",
    "prettier/prettier": "error"
  }
}
